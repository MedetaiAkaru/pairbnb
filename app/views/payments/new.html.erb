
<div class="form-container radius-box glassy-bg small-10 small-centered medium-8 large-6 columns">
  <h2 class="mbs">New Payment</h2>
  <%= form_tag payments_path do%>
  <%= render 'customer_form' unless current_user.has_payment_info? %>
    <p>Please enter your payment details:</p>
    <div id="dropin"></div>
  <%= hidden_field_tag :price, @reservation.total %>  
    <%=submit_tag "Pay $#{@reservation.total}", class: "button mt1" %>
  <%end%>
</div>

<%= link_to 'Back', listings_path %>
